# Cabernai Web Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control!

# ================================
# DOMAIN & URL CONFIGURATION
# ================================
UI_PUBLIC_URL=https://your-domain.com
STRAPI_PUBLIC_URL=https://your-domain.com
NEXT_PUBLIC_APP_PUBLIC_URL=http://localhost:3000
NEXT_PUBLIC_STRAPI_URL=http://localhost:1337

# ================================
# DATABASE CONFIGURATION (Supabase)
# ================================
SUPABASE_DATABASE_URL=postgresql://postgres.your-project-ref:your-password@aws-0-region.pooler.supabase.com:6543/postgres

# ================================
# STRAPI SECRETS (Generated automatically)
# ================================
APP_KEYS=your-app-key-1,your-app-key-2,your-app-key-3,your-app-key-4
ADMIN_JWT_SECRET=your-admin-jwt-secret
API_TOKEN_SALT=your-api-token-salt
TRANSFER_TOKEN_SALT=your-transfer-token-salt
JWT_SECRET=your-jwt-secret

# ================================
# NEXTAUTH CONFIGURATION
# ================================
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=https://your-domain.com

# ================================
# FILE UPLOAD - CLOUDINARY (Recommended)
# ================================
CLOUDINARY_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ================================
# FILE UPLOAD - AWS S3 (Alternative)
# Uncomment these and comment out Cloudinary if using S3
# ================================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_ACCESS_SECRET=your-aws-secret-key
# AWS_REGION=your-aws-region
# AWS_BUCKET=your-s3-bucket-name

# ================================
# EMAIL SERVICE - MAILGUN (Optional)
# ================================
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain
MAILGUN_EMAIL=your-mailgun-email

# ================================
# MONITORING - SENTRY (Optional)
# ================================
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-public-sentry-dsn

# ================================
# SYSTEM CONFIGURATION
# ================================
NODE_ENV=production
CRON_ENABLED=true
