# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# External Database Configuration
# Option 1: Connection String (Recommended - use this OR individual parameters below)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
DATABASE_SCHEMA=strapi_cabernai_web  # Required: specify schema name (even when using connection string)

# Option 2: Individual Parameters (use these if not using DATABASE_URL)
DATABASE_HOST=your-external-db-host.com
DATABASE_PORT=5432
DATABASE_NAME=your_database_name
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_secure_db_password
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# Strapi Configuration
JWT_SECRET=your_jwt_secret_key_here
ADMIN_JWT_SECRET=your_admin_jwt_secret_key_here
TRANSFER_TOKEN_SALT=your_transfer_token_salt_here
API_TOKEN_SALT=your_api_token_salt_here
APP_KEYS=key1,key2,key3,key4

# URLs
STRAPI_URL=https://api.cabernai.io
APP_PUBLIC_URL=https://cabernai.io
NEXTAUTH_URL=https://cabernai.io
NEXTAUTH_SECRET=your_nextauth_secret_here

# API Keys
STRAPI_REST_READONLY_API_KEY=your_readonly_api_key_here

# Email Configuration (if using Mailgun)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# S3 Configuration (if using AWS S3 for uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region
AWS_BUCKET=your_s3_bucket_name

# Sentry Configuration (optional)
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Analytics (optional)
GOOGLE_ANALYTICS_ID=your_ga_id
GOOGLE_TAG_MANAGER_ID=your_gtm_id

# ReCaptcha (optional)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
